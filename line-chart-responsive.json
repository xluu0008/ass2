{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "https://raw.githubusercontent.com/xluu0008/DataVisulization2/main/line-chart.csv"
  },

  "hconcat": [{
    "width": 460,
    "height":220,
  
 
  "mark": {
    "type": "line",
    
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "month",
      "title": "" 
    },
    "y": {
      "field": "total",
      "aggregate": "mean",
      "title":"Total Vaccinations"
    
    },
  
    "color": {
 
      "type": "nominal",
      "field": "country",  
      "scale": {
        "domain": [
          "China",
          "Brazil",
          "India",
          "United States",
          "United Kingdom"
         
        
        ],
        "range": [
          "#EF5350",
          "#FF5722",
          "#7E57C2",
          "#2196F3",
          "#FFB300"
        
         
        ]
      },
      "title": "Country" 
    },
    "tooltip": [
      {"field": "country", "type": "nominal","title": "Country"},
      {"field": "date", "type": "temporal", "timeUnit": "month", "title": "Month"},
      {"field": "total","type": "quantitative","title": "Vaccinations","format": ","}
    ]
  },

  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["country"],
          "bind": "legend"
        }
      },
      "mark": "line",
      "width": 460,
      "height":220,
      "encoding": {
     
        "color": {
 
          "type": "nominal",
          "field": "country",  
          "scale": {
            "domain": [
              "China",
             
              "India",
              "United States",
               "Brazil",         
              "United Kingdom"
           
            
            ],
            "range": [
              "#EF5350",
              "#FF5722",
              "#7E57C2",
              "#2196F3",
              "#4CAF50"
             
             
            ]
          },
          "title": "Country" 
        },

        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.8},
          "value": 0
        },
        "tooltip": [
          {"field": "country", "type": "nominal","title": "Country"},
          {"field": "date", "type": "temporal", "timeUnit": "month", "title": "Month"},
          {"field": "total","type": "quantitative","title": "Vaccinations","format": ","}
        ]
      }
    }

  ]
  }
 ],
  "config": { "title": { "font": "sans-serif", "fontSize": 14 } }

}
